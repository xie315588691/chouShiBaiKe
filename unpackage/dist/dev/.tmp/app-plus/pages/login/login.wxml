<view><uni-status-bar vue-id="1" bgC="{{tabbarColor}}" bind:__l="__l"></uni-status-bar><view class="login-img"><image src="../../static/mimo/loginhead.png" mode="widthFix" lazy-load></image><text data-event-opts="{{[['tap',[['colseLogin',['$event']]]]]}}" class="iconfont icon-guanbi" bindtap="__e"></text></view><view class="login-from"><view class="reset-psd"><view class="reset-psd-item"><block wx:if="{{!isTel}}"><input type="text" placeholder="昵称/手机号码/邮箱" data-event-opts="{{[['input',[['__set_model',['','username','$event',[]]]]]]}}" value="{{username}}" bindinput="__e"/></block><block wx:else><view class="reset-psd-tel"><text>+86</text><input type="text" placeholder="输入手机号码" data-event-opts="{{[['input',[['__set_model',['','telephone','$event',[]]]]]]}}" value="{{telephone}}" bindinput="__e"/></view></block></view><block wx:if="{{!isTel}}"><view class="reset-psd-item login-psd"><input type="password" placeholder="请输入密码" data-event-opts="{{[['input',[['__set_model',['','psd','$event',[]]]]]]}}" value="{{psd}}" bindinput="__e"/><text>忘记密码?</text></view></block><block wx:else><view class="reset-psd-item login-psd login-yzm"><input type="text" placeholder="请输入验证码" data-event-opts="{{[['input',[['__set_model',['','yzm','$event',[]]]]]]}}" value="{{yzm}}" bindinput="__e"/><button class="reset-psd-yzm" disabled="{{yzmCheck}}" data-event-opts="{{[['tap',[['getyzm',['$event']]]]]}}" bindtap="__e">{{yzmtext}}</button></view></block></view><button class="layout" disabled="{{hasLogin}}">登录</button></view><block wx:if="{{!isTel}}"><view data-event-opts="{{[['tap',[['changeTel',[1]]]]]}}" class="login-code" bindtap="__e">验证码登录<text class="iconfont icon-you"></text></view></block><block wx:else><view data-event-opts="{{[['tap',[['changeTel',[2]]]]]}}" class="login-code" bindtap="__e">账号密码登录<text class="iconfont icon-you"></text></view></block><view class="login-others"><view class="login-others-text">第三方登录</view><view class="login-others-line"></view></view><other-login vue-id="2" providerList="{{providerList}}" bind:__l="__l"></other-login><view class="login-agree">注册即代表您同意<text>《仿糗事百科用户协议》</text></view></view>