
.topic-bg {
	width: 100%;
	height: 300rpx;
	position: relative;
	overflow: hidden;
}
.topic-bg > image {
	width: 100%;
	-webkit-filter: blur(10rpx);
	        filter: blur(10rpx);
}
.topic-info{
	padding: 0 75rpx 0 20rpx;
}
.topic-info-one {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	font-size: 42rpx;
	height: 100rpx;
	font-weight: 700;
}
.topic-info-one image {
	width: 150rpx;
	height: 150rpx;
	border-radius: 16rpx;
	margin-right: 20rpx;
	-webkit-transform: translateY(-75rpx);
	    -ms-transform: translateY(-75rpx);
	        transform: translateY(-75rpx);
}
.topic-info-two{
	font-size: 28rpx;
	color: #D3D3D3;
}
.topic-info-three{
	font-size: 30rpx;
	color: #A7A7A7;
}


