
.paper {
	position: relative;
	width: 100%;
	height: 100%;
}
.paper-menu {
	width: 420rpx;
	height: 200rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;

	-webkit-box-shadow: 1rpx 1rpx 20rpx 0 rgba(0, 0, 0, 0.3);

	        box-shadow: 1rpx 1rpx 20rpx 0 rgba(0, 0, 0, 0.3);
	background-color: #ffffff;
	z-index: 9;
	position: absolute;
	top: 20rpx;
	right: 0;
}
.paper-menu > view {
	height: 100rpx;
	line-height: 100rpx;
	padding-left: 20rpx;
	font-size: 34rpx;
	font-weight: 700;
}
.paper-menu .iconfont {
	margin-right: 20rpx;
}
.paper-menu-h {
	background-color: #eeeeee;
}
.paper-msk{
	position: absolute;
	top: 0;
	left: 0;
	height: 100%;
	width: 100%;
	z-index: 8;
}

