
.news-left,
.news-right {
	width: 100%;
}
.news-left > view,
.news-right > view {
	font-size: 50rpx;
}
.news-left > view {
	color: #ffb256;
}
.news-tabbar-center {
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	font-size: 36rpx;
	font-weight: 700;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
}
.news-tabbar-center > view {
	margin-left: 40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
}
.news-tabbar-center text {
	display: inline-block;
	color: #afafaf;
}
.news-tabbar-center .uni-tab-line {
	height: 10rpx;
	width: 60rpx;
	border-radius: 5rpx;
}
.news-tabbar-center .active text {
	color: #000000;
}
.news-tabbar-center .active .uni-tab-line {
	background-color: #fede33;
}
.news-topic-search {
	padding: 20rpx;
}
.news-topic-search-input {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	height: 82rpx;
	font-size: 28rpx;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	background-color: #f4f4f4;
	border-radius: 12rpx;
}
.news-banner {
	padding: 0 20rpx 10rpx;
}
.news-banner image {
	width: 100%;
	border-radius: 12rpx;
}
.news-hot-cate {
	padding: 20rpx;
	border-bottom: 1rpx solid #f4f4f4;
	border-top: 1rpx solid #f4f4f4;
}
.news-hot-cate-b {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	margin: 10rpx 0;
}
.news-hot-cate-b > view {
	display: inline-block;
	height: 56rpx;
	font-size: 24rpx;
	line-height: 56rpx;
	padding: 0 25rpx;
	background-color: #f7f7f7;
	color: #a2a2a2;
	border-radius: 8rpx;
	margin-right: 20rpx;
}
.news-hot-cate-b > view:last-of-type {
	margin-right: 0;
}
.news-update {
	margin: 20rpx 20rpx 0;
}

